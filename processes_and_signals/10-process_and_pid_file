#!/usr/bin/env bash
# Script that writes its PID file and handles INT, TERM and QUIT signals.

pid_file="/var/run/myscript.pid"

cleanup() {
    rm -f "$pid_file"
    exit
}

trap 'echo "Y U no love me?!";' INT
trap 'echo "I hate the kill command"; cleanup' TERM
trap 'cleanup' QUIT

echo "$$" > "$pid_file"

while true; do
    echo "To infinity and beyond"
    sleep 2
done




