#!/usr/bin/env bash
# Script that writes its PID to /var/run/myscript.pid and handles signals.

pid_file="/var/run/myscript.pid"

echo "$$" > "$pid_file" || exit 1

cleanup() {
    rm -f "$pid_file"
    exit
}

term_handler() {
    echo "I hate the kill command"
    cleanup
}

trap 'echo "Y U no love me?!";' INT
trap 'term_handler' TERM
trap 'cleanup' QUIT

while :; do
    echo "To infinity and beyond"
    sleep 2
done





